#! /bin/bash
find . -name 'node_modules' -type d -prune
while true; do
    read -p "Do you wish to delete the node_modules files from these directory?" yn
    case $yn in
        [Yy]* ) find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +; break;;  
        [Nn]* ) exit;;
        * ) echo "Please answer yes or no.";;
    esac
done
